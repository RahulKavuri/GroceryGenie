<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="24dp"
    tools:context=".RegisterActivity">

    <!-- Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create Account"
        android:textSize="24sp"
        android:textStyle="bold"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="40dp" />

    <!-- Subtitle -->
    <TextView
        android:id="@+id/tvSubtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Create your account to simplify your shopping experience"
        android:textSize="14sp"
        android:textColor="#666666"
        android:gravity="center"
        app:layout_constraintTop_toBottomOf="@id/tvTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp" />



    <!-- Email Field -->
    <EditText
        android:id="@+id/etEmail"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Your email address"
        android:drawableStart="@drawable/ic_email"
        android:drawablePadding="16dp"
    android:paddingStart="20dp"
    android:background="@drawable/rounded_edittext"
    android:textColorHint="#888888"
    app:layout_constraintTop_toBottomOf="@id/tvSubtitle"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="24dp" />

    <!-- Password Field -->
    <EditText
        android:id="@+id/etPassword"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Create a password"
        android:drawableStart="@drawable/ic_password"
        android:drawablePadding="16dp"
    android:paddingStart="20dp"
    android:inputType="textPassword"
    android:background="@drawable/rounded_edittext"
    android:textColorHint="#888888"
    app:layout_constraintTop_toBottomOf="@id/etEmail"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

    <!-- Full Name Field -->
    <EditText
        android:id="@+id/etUserName"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:hint="Enter your full name"
        android:drawableStart="@drawable/ic_user"
        android:drawablePadding="16dp"
    android:paddingStart="20dp"
    android:background="@drawable/rounded_edittext"
    android:textColorHint="#888888"
    app:layout_constraintTop_toBottomOf="@id/etPassword"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    android:layout_marginTop="16dp" />

    <!-- Terms & Conditions Checkbox -->
    <CheckBox
        android:id="@+id/cbTerms"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="I agree with Terms  Conditions"
        android:textColor="#000000"
        android:textStyle="bold"
        app:layout_constraintTop_toBottomOf="@id/etUserName"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="16dp" />

    <!-- Sign Up Button -->
    <Button
        android:id="@+id/etSignUp"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:text="Sign Up"
        android:textStyle="bold"
        android:textColor="#FFFFFF"
        android:backgroundTint="#7669F5"
        app:layout_constraintTop_toBottomOf="@id/cbTerms"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Already Registered Text -->
    <TextView
        android:id="@+id/tvLoginPrompt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Already registered? "
        android:textColor="#000000"
        android:textSize="14sp"
        app:layout_constraintTop_toBottomOf="@id/etSignUp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="20dp" />

    <!-- Log In Link -->
    <TextView
        android:id="@+id/tvLoginLink"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Log In"
        android:textColor="#7669F5"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@id/tvLoginPrompt"
        app:layout_constraintStart_toEndOf="@id/tvLoginPrompt" />

</androidx.constraintlayout.widget.ConstraintLayout>
